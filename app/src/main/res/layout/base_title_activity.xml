<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_headline"
        android:layout_width="match_parent"
        android:layout_height="36.5dip"
        >

        <RelativeLayout
            android:id="@+id/rl_left_title"
            android:layout_width="36.5dp"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/iv_left_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:clickable="false" >

            <TextView
                android:id="@+id/tv_centre_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="14.4sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_right_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true" >

            <ImageView
                android:id="@+id/iv_right_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="7dp"
                android:layout_centerInParent="true" />

            <TextView
                android:id="@+id/tv_right_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:lines="1"
                android:textSize="12.5sp"
                android:paddingRight="15dp">
            </TextView>
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/view_list"
        android:layout_width="match_parent"
        android:layout_height="1dp">
    </View>

        <LinearLayout
            android:id="@+id/llContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
        </LinearLayout>

</LinearLayout>